@model MVCtrab.ViewModels.CostumerIndexData
@{
    ViewBag.Title = "Cliente";
}

@if (Model.Costumers != null)
{
    if (Model.Costumers.Count() == 1)
    {
        <h4>Dados do Cliente</h4>
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Ramo</th>
            <th>Proprietário</th>
            <th></th>
        </tr>
            @foreach (var c in Model.Costumers)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => c.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => c.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => c.Branch)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => c.Owner)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", "Costumer", new { id = c.Id }, null) |
                        @Html.ActionLink("Excluir", "Delete", "Costumer", new { id = c.Id }, null)
                    </td>
                </tr>
            }
    </table>
    }
@*@Html.ActionLink("Novo Cliente", "Create", "Custumer")*@

}