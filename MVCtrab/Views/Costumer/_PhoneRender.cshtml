@model MVCtrab.ViewModels.CostumerIndexData

@if (Model.Phones != null)
    {
<table class="table">
    <tr>
        <th>Telefones</th>
        <th></th>
    </tr>
    
        @foreach (var p in Model.Phones)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => p.Telephone)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", "Phone", new { id = p.Id }, null) |
                    @Html.ActionLink("Excluir", "Delete", "Phone", new { id = p.Id }, null)
                </td>
            </tr>
        }
</table>
@Html.ActionLink("Novo Telefone", "Create", "Phone", new { IdCostumer = Request.Params["id"] }, null)
    }